= content_for(:title) do
  #{@client.current_alias} Purchases

= content_for(:context_navigation) do
  = render 'context_navigation', client: @client

- if @client.is_shopping?
  %p #{@client.current_alias} has an open cart
- else
  %p= link_to "Start Shopping", store_start_path(shopper_id: @client), method: :put, class: "btn",
    data: { confirm: "Start a cart for #{@client.current_alias}?" }

%table.table
  = render @carts
