= content_for(:title) do
  Create Login for #{@client.current_alias}

=content_for(:context_navigation) do
  = render 'context_navigation', client: @client

%p
  Please use the form below to provide a password.

= form_tag(create_login_client_path(@client), method: "PUT") do
  = hidden_field_tag(:client_id, @client)
  %fieldset
    .control-group
      = label_tag(:password, "Password:")
      = password_field_tag(:password)
    .control-group
      = label_tag(:password_confirmation, "Confirm:")
      = password_field_tag(:password_confirmation)
    = submit_tag "Save", class: "btn"
