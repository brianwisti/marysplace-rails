<% prefs = current_user.preference_for(:client_fields) %>

<table class="table">
  <thead>
    <tr>
      <th><%= sortable "current_alias" %></th>
      <% if can? :manage, Client %>
        <% if prefs.include? "full_name" %>
          <th><%= sortable "full_name" %></th>
        <% end %>
        <% if prefs.include? "point_balance" %>
          <th><%= sortable "point_balance" %></td>
        <% end %>
        <% if prefs.include? "created_at" %>
          <th><%= sortable "created_at" %></th>
        <% end %>
        <% if prefs.include? "oriented_on" %>
          <th><%= sortable "oriented_on" %></th>
        <% end %>
        <% if prefs.include? "last_activity_on" %>
          <th><%= sortable "last_activity_on" %></th>
        <% end %>
        <% if prefs.include? "birthday" %>
          <th><%= sortable "birthday" %></th>
        <% end %>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render clients, prefs: prefs %>
  </tbody>
</table>
