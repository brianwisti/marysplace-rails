= content_for(:title) do
  Bon Mary's Store

= content_for(:sidebar) do
  = render 'sidebar'

= form_tag(store_start_path, method: :put, class: "form-inline") do
  .control-group
    .controls
      = text_field_tag "current_alias", nil,
        data: { provide: 'typeahead', field: 'shopper_id', balance: 0 },
        autocomplete: 'off',
        class: 'client-typeahead'
      %span.summary
        %span.point-total.text-info
      = button_tag "Start Shopping!", class: "btn"
      = hidden_field_tag :shopper_id

%table.table
  - @carts.each do |cart|
    %tr
      %td= cart.shopper.current_alias
      %td= cart.started_at
      %td
        - if cart.finished_at
          = cart.finished_at
        - else
          %span.label Open
      %td= cart.total
      %td= link_to "Show", store_show_path(cart)
