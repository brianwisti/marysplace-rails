.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container-fluid
      - if current_user
        %a.btn.btn-navbar{ data: { toggle: "collapse", target: ".nav-collapse" } }
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to image_tag('marys-place-icon.png') + " Mary's Place", root_url, class: "brand"
        .btn-group.pull-right
          %a.btn.dropdown-toggle{ href: "#", data: { toggle: "dropdown" } }
            %i.icon-user
            - if message_count > 0
              %span.badge.badge-important= message_count
            %span.hidden-phone= current_user.login
            %span.caret
          %ul.dropdown-menu
            %li= link_to current_user.login, current_user
            %li
              - if message_count > 0
                = link_to "#{message_count} News #{'Item'.pluralize(message_count)}", messages_path, class: "badge badge-important"
              - else
                = link_to "News", messages_path
            %li.divider
            %li= link_to "Sign Out", logout_url, method: :delete
        .nav-collapse
          %ul.nav
            - sections.each do |section|
              - if section[:active]
                %li.active= link_to section[:title], section[:url]
              - else
                %li= link_to section[:title], section[:url]
      - else
        = link_to image_tag('marys-place-icon.png') + " Mary's Place", root_url, class: "brand"

