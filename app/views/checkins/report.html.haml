= content_for(:title) do
  Checkin Report for
  - if @day > 0
    = @span.strftime("5d %B %Y")
  - elsif @month > 0
    = @span.strftime("%B %Y")
  -else
    = @span.strftime("%Y")

= content_for(:sidebar) do
  = render 'sidebar'

= content_for(:totals) do
  %tr.info
    %td Total
    %td= number_with_delimiter(@total_checkins)

.pagination.pagination-large.pagination-centered
  %ul
    %li= link_to @last_year.year, annual_report_checkins_path({ year: @last_year.year })
    %li.active= link_to @year, annual_report_checkins_path({  year: @year })
    %li= link_to @next_year.year, annual_report_checkins_path({ year: @next_year.year })

- if @month > 0
  .pagination.pagination-centered
    %ul
      %li= link_to @last_month.strftime("%Y %b"), monthly_report_checkins_type_path({ id: @checkins_type, year: @last_month.year, month: @last_month.month })
      %li.active= link_to @span.strftime("%Y %b"), monthly_report_checkins_type_path({ id: @checkins_type, year: @span.year, month: @span.month })
      %li= link_to @next_month.strftime("%Y %b"), monthly_report_checkins_type_path({ id: @checkins_type, year: @next_month.year, month: @next_month.month })

- if @day > 0
  .pagination.pagination-small.pagination-centered
    %ul
      %li= link_to @last_day.strftime("%Y %b %d"), daily_report_checkins_type_path({ id: @checkins_type, year: @last_day.year, month: @last_day.month, day: @last_day.day })
      %li.active= link_to @span.strftime("%Y %b %d"), daily_report_checkins_type_path({ id: @checkins_type, year: @span.year, month: @span.month })
      %li= link_to @next_day.strftime("%Y %b %d"), daily_report_checkins_type_path({ id: @checkins_type, year: @next_day.year, month: @next_day.month, day: @next_day.day })

%table.table
  %thead
    %tr
      %th Span
      %th Checkins
  %tbody
    = yield :totals
    - if @rows
      - @rows.each do |entry|
        - entry_date = Date.parse(entry.span)
        %tr
          %td
            - if @month > 0
              = link_to entry_date.strftime("%Y %B %d"),
                daily_report_checkins_type_path({ id: @checkins_type.id, year: entry_date.year, month: entry_date.month, day: entry_date.day})
            - else
              = link_to entry_date.strftime("%Y %B"),
                monthly_report_checkins_type_path({ id: @checkins_type.id, year: entry_date.year, month: entry_date.month})
          %td= entry.checkins
      = yield :totals
