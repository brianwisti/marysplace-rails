= form_for catalog_item, role: 'form' do |f|
  - if catalog_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(catalog_item.errors.count, "error")} prohibited this catalog_item from being saved:"
      %ul
        - catalog_item.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :cost
    = f.number_field :cost, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'
  .checkbox
    = f.label :is_available do
      = f.check_box :is_available
      Is Available
  .form-group
    = f.submit 'Save', class: 'btn btn-primary btn-block'
    = cancel_button
