<% if client_flag.is_resolved? %>
  <tr class="success">
<% elsif client_flag.is_blocking %>
  <tr class="error">
<% else %>
  <tr>
<% end %>
  <td>
    <% if client_flag.is_resolved? %>
      <span class="label label-success">
        <% if client_flag.resolved_on %>
          Resolved by <%= client_flag.resolved_by.login %>
        <% elsif client_flag.expires_on %>
          Expired on <%= client_flag.expires_on %>
        <% end %>
      </span>
    <% elsif client_flag.expires_on %>
      Expires on <%= client_flag.expires_on %>
    <% end %>
  </td>
  <td>
    <% if client_flag.is_blocking %>
      <span class="label label-important">Blocking</span>
    <% end %>
    <% if !client_flag.can_shop %>
      <span class="label label-warning">No Shopping</span>
    <% end %>
  </td>
  <td>
    <%= client_flag.client.current_alias %>
  </td>
  <td>
    <%= client_flag.created_at.to_date %> by <%= client_flag.created_by.login %>
  <td>
    <%= link_to "Show", client_flag %>
  </td>
</tr>
